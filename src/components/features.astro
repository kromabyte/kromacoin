---
// @ts-ignore
import { Icon } from "astro-icon";

const features = [
  {
    title: "Online Transactions",
    description:
      "Build your site using React, Svelte, Vue, Preact, web components, or just plain ol' HTML + JavaScript.",
    icon: "bx:bxs-shopping-bag",
  },
  {
    title: "Pear-to-pear Payments",
    description:
      "Astro renders your entire page to static HTML, removing all JavaScript from your final build by default.",
    icon: "bx:bxs-coin",
  },
  {
    title: "Store Value",
    description:
      "Need some JS? Astro can automatically hydrate interactive components when they become visible on the page.  ",
    icon: "bx:bxs-data",
  },
  {
    title: "Fast and Secure",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any other npm packages.",
    icon: "bx:bxs-check-shield",
  },
  {
    title: "Decentralized",
    description:
      "Automatic sitemaps, RSS feeds, pagination and collections take the pain out of SEO and syndication. It just works!",
    icon: "bx:bxs-network-chart",
  },
  {
    title: "Reliable",
    description:
      "Astro is an open source project powered by hundreds of contributors making thousands of individual contributions.",
    icon: "bx:bxs-medal",
  },
];
---
<div class="px-10">
<div class="mt-16 md:mt-0 pt-10 text-center">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Stable and Highly Profitable Crypto Currency
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Payment system for users worldwide that can be used for a wide range of purposes
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>

</div>
